<div class="sign">
  <div class="cover">
    <div class="signup">
      <div class="icon">
        <%= image_tag 'voks.svg' %></div>

      <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>

        <%= form_group_for f, :email, label: false  do %>
          <div class="form-group">
            <%= f.label :email %><br />
            <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control", placeholder: "jane.doe@gmail.com", required:'', pattern: '/\A([^@\s]+)@((?:[-a-z0-9]+\.)+[a-z]{2,})\z/i'%>
          </div>
        <% end %>

        <%= form_group_for f, :password, label: false  do %>
          <div class="form-group">
            <%= f.label :password %>
            <% if @minimum_password_length %>
            <em>(<%= @minimum_password_length %> characters minimum)</em>
            <% end %><br />
            <%= f.password_field :password, autocomplete: "off", class: "form-control", placeholder: "password", required:"" %>
          </div>
        <% end %>

        <%= form_group_for f, :password_confirmation, label: false  do %>
          <div class="form-group">
            <%= f.label :password_confirmation %><br />
            <%= f.password_field :password_confirmation, autocomplete: "off", class: "form-control", placeholder: "confirm password", required:"" %>
          </div>
        <% end %>

        <div class="form-group">
          <span><%= f.submit "Sign up", class: "btn btn-success" %>
          <%= render "devise/shared/links" %>
            </span>
        </div>
      <% end %>
    </div>
  </div>
</div>